<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="martina.ualberta.baydala_fueltrack.FuelTrack">

    <TextView
        android:id="@+id/previousEntriesTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/previous_entries"
        android:layout_gravity="center_horizontal"
        android:textIsSelectable="false"
        android:textSize="20dp"
        android:textColor="#000000" />

    <ListView android:id="@+id/previousEntries"
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:scrollbars="vertical"
        android:divider="#ff3a3a"
        android:dividerHeight="1dp"
        android:layout_margin="5dp"
        android:focusableInTouchMode="false"
        android:footerDividersEnabled="false"
        android:fastScrollAlwaysVisible="true" />

    <Button android:id="@+id/add_entry"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/button_add_entry"
        android:onClick="addEntry"
        android:backgroundTint="#ff3a3a"
        android:layout_margin="5dp"
        android:textColor="#ffffff" />

</LinearLayout>
