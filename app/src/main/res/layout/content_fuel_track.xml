<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="martina.ualberta.baydala_fueltrack.FuelTrack">

    <TextView
        android:id="@+id/previousEntriesTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/previous_entries"
        android:layout_gravity="center_horizontal"
        android:textIsSelectable="false"
        android:textSize="20dp"
        android:textColor="#000000"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <ListView android:id="@+id/previousEntries"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:scrollbars="none"
        android:divider="#ff3a3a"
        android:dividerHeight="1dp"
        android:focusableInTouchMode="false"
        android:footerDividersEnabled="false"
        android:fastScrollAlwaysVisible="false"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginBottom="5dp"
        android:layout_below="@+id/previousEntriesTitle" />

    <Button android:id="@+id/add_entry"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/button_add_entry"
        android:onClick="addEntry"
        android:backgroundTint="#ff3a3a"
        android:textColor="#ffffff"
        android:background="#ff3a3a"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_alignBottom="@+id/previousEntries"
        android:layout_alignParentStart="true" />


</RelativeLayout>


