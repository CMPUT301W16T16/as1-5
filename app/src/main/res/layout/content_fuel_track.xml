<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="martina.ualberta.baydala_fueltrack.FuelTrack" android:weightSum="1">

    <TextView
        android:id="@+id/previousEntriesTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/previous_entries"
        android:textIsSelectable="false"
        android:textSize="20sp"
        android:textColor="#000000"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp" android:layout_gravity="center_horizontal"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/tap_to_view"
        android:id="@+id/textView" android:layout_gravity="center_horizontal"/>

    <ListView
        android:id="@+id/previousEntries"
        android:layout_height="410dp"
        android:layout_width="wrap_content" android:layout_weight="0.56"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="36dp"
            android:text="@string/fuel_cost_title"
            android:layout_weight="0.19" android:layout_marginTop="15dp" android:textSize="20sp"
            />
        <TextView
            android:id="@+id/fuel_cost"
            android:layout_width="wrap_content"
            android:layout_height="36dp"
            android:layout_weight="1" android:textSize="20sp" android:layout_gravity="bottom"/>

    </LinearLayout>

    <Button android:id="@+id/add_entry"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/button_add_entry"
        android:onClick="addEntry"
        android:textColor="#ffffff"
        android:background="#ff3a3a"
        android:layout_margin="5dp"/>


</LinearLayout>


