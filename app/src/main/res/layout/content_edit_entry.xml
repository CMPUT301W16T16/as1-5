<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="martina.ualberta.baydala_fueltrack.EditEntryActivity"
    tools:showIn="@layout/activity_edit_entry">

    <Button
        android:id="@+id/done_edit_entry"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="completeEditEntry"
        android:layout_gravity="right" />

    <Space
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_gravity="center_horizontal" />

    <TextView
        android:id="@+id/edit_item_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/edit_item_hint" />

    <EditText
        android:id="@+id/edit_item"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />



</LinearLayout>
